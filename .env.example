# The Facility - Twitter Automation Environment Variables
# Copy this to .env and fill in your values

# Twitter API Credentials (from developer.twitter.com)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Twitter Cookie Auth (alternative - from browser DevTools)
TWITTER_AUTH_TOKEN=
TWITTER_CT0=

# Rate Limiting
RATE_LIMIT_MIN=60
RATE_LIMIT_MAX=90
DAILY_LIMIT=50

# Features
REPOST_ENABLED=true
REPOST_INTERVAL_HOURS=6
